<Window x:Class="ControlDeCheckeo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlDeCheckeo"
        xmlns:components="clr-namespace:Checador_App_Wpf.Components"
        mc:Ignorable="d"
        Title="Control de Checkeo"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True"
        Background="#ECF0F1">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <Border Background="#1F3A66" Padding="14">
            <DockPanel>
                <TextBlock Text="Sistema de Control de Accesos"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center"
                           DockPanel.Dock="Left"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <!-- Botón de Logout -->
                    <Button Click="Logout_Click"
                            Background="#E74C3C"
                            Foreground="White"
                            Margin="10,0,0,0"
                            Padding="10"
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="16"
                            ToolTip="Cerrar sesión"
                            Cursor="Hand"
                            BorderBrush="#C0392B"
                            BorderThickness="1"
                            Width="40"
                            Height="40"
                            Content=""
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"/>

                    <!-- Botón de salida segura -->
                    <Button Click="CerrarConClave_Click"
                            Background="#2C3E50"
                            Foreground="White"
                            Margin="10,0,0,0"
                            Padding="10"
                            ToolTip="Salir del sistema"
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="16"
                            Cursor="Hand"
                            BorderBrush="#1A252F"
                            BorderThickness="1"
                            Width="40"
                            Height="40"
                            Content="X"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Contenedor de vistas -->
        <ContentControl x:Name="MainContent" Grid.Row="1"/>

        <!-- 🔄 Loader Global -->
        <components:LoaderControl x:Name="GlobalLoader"
                                  Visibility="Collapsed"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Stretch"
                                  Grid.RowSpan="2"
                                  Panel.ZIndex="999"/>
    </Grid>
</Window>
