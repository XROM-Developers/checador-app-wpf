<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="VerdePrincipal">#2ecc71</Color>
    <Color x:Key="VerdeOscuro">#27ae60</Color>
    <Color x:Key="FondoClaro">#ecf0f1</Color>
    <Color x:Key="TextoOscuro">#2c3e50</Color>

    <SolidColorBrush x:Key="BrushVerdePrincipal" Color="{StaticResource VerdePrincipal}" />
    <SolidColorBrush x:Key="BrushVerdeOscuro" Color="{StaticResource VerdeOscuro}" />
    <SolidColorBrush x:Key="BrushFondoClaro" Color="{StaticResource FondoClaro}" />
    <SolidColorBrush x:Key="BrushTextoOscuro" Color="{StaticResource TextoOscuro}" />

    <Style TargetType="Button" x:Key="BotonVerde">
        <Setter Property="Background" Value="{StaticResource BrushVerdePrincipal}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Padding" Value="10,5" />
        <Setter Property="Margin" Value="5" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="BorderBrush" Value="{StaticResource BrushVerdeOscuro}" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>
</ResourceDictionary>
