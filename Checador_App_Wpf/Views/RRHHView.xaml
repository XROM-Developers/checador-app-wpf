<UserControl x:Class="ControlDeCheckeo.Views.RRHHView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:fingerprints="clr-namespace:ControlDeCheckeo.Components.Fingerprints"
             Background="#F4F6F7">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- Columna Izquierda: Cámara y usuario -->
        <Border Grid.Column="0" Background="White" CornerRadius="12" Padding="24" Margin="10"
                BorderBrush="#1F3A66" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Registro de Usuario" FontSize="22" FontWeight="Bold"
                           Foreground="#1F3A66" Margin="0,0,0,20"/>

                <TextBlock Text="Buscar usuario" Margin="0,0,0,5" Foreground="#2C6FB0" />
                <ComboBox x:Name="cmbUsuarios" IsEditable="True" Height="32" Margin="0,0,0,15"/>

                <TextBlock Text="Cámara" Margin="0,10,0,5" Foreground="#2C6FB0" />
                <Border BorderBrush="#3498DB" BorderThickness="2" Background="#ecf0f1" Margin="0,0,0,10"
                        HorizontalAlignment="Stretch" VerticalAlignment="Top" MaxHeight="300" CornerRadius="6">
                    <Viewbox Stretch="Uniform">
                        <Image x:Name="imgCamara"
                               Width="640" Height="480"
                               Stretch="Uniform"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                    </Viewbox>
                </Border>

                <Button x:Name="btnTomarFoto" Content="Tomar Foto" Click="btnTomarFoto_Click"
                        Background="#3498DB" Foreground="White" FontWeight="SemiBold"
                        Width="160" Height="36" HorizontalAlignment="Left" BorderBrush="#1F3A66" BorderThickness="1"
                        Cursor="Hand" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Columna Derecha: Huella Digital -->
        <Border Grid.Column="1" Background="White" CornerRadius="12" Padding="24" Margin="10"
                BorderBrush="#1F3A66" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Huella Digital" FontSize="22" FontWeight="Bold"
                           Foreground="#1F3A66" Margin="0,0,0,20"/>

                <fingerprints:FingerprintCaptureControl x:Name="fingerprintCaptureControl"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
