<UserControl x:Class="ControlDeCheckeo.Views.CheckerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource BrushFondoClaro}">

    <Grid Margin="20">
        <Border Background="White" Padding="30" CornerRadius="10">
            <StackPanel>
                <TextBlock Text="Registro de Entrada" FontSize="22" FontWeight="Bold"
                           Foreground="{StaticResource BrushVerdePrincipal}" Margin="0,0,0,20"/>

                <Button Content="Escanear Huella" Style="{StaticResource BotonVerde}" Width="160" HorizontalAlignment="Left"/>

                <TextBlock Text="Ultima verificacion: -" Margin="0,20,0,5"
                           Foreground="{StaticResource BrushTextoOscuro}" />

                <TextBlock Text="Resultado: Esperando..." Margin="0,0,0,0"
                           Foreground="{StaticResource BrushTextoOscuro}" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
