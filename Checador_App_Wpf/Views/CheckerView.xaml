<UserControl x:Class="ControlDeCheckeo.Views.CheckerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource BrushColorFondo}">

    <Grid Margin="20">
        <Border Style="{StaticResource BorderPanel}">
            <StackPanel>
                <!-- Título -->
                <TextBlock Text="Registro de Entrada" Style="{StaticResource TextBlockTitle}" Foreground="{StaticResource BrushColorSecundario}" Margin="0,0,0,20"/>

                <!-- Botón de Escanear Huella -->
                <Button Content="Escanear Huella" Style="{StaticResource BotonPrincipal}" Width="160" HorizontalAlignment="Left"/>

                <!-- Información de última verificación -->
                <TextBlock Text="Última verificación: -" Style="{StaticResource TextBlockSecondary}" Margin="0,20,0,5"/>

                <!-- Resultado -->
                <TextBlock Text="Resultado: Esperando..." Style="{StaticResource TextBlockSecondary}" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
