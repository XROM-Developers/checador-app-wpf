<UserControl x:Class="ControlDeCheckeo.Views.CheckerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:components="clr-namespace:Checador_App_Wpf.Components"
             Background="{StaticResource BrushColorFondo}">

    <UserControl.Resources>
        <ImageBrush x:Key="FotoPerfilBrushKey" ImageSource="/Assets/Images/Avatar.png" />
        <ImageBrush x:Key="FotoGuardiaBrushKey" ImageSource="/Assets/Images/Avatar.png" />
    </UserControl.Resources>

    <Grid Margin="40">
        <!-- Estructura principal: secciones distribuidas -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Grid.ColumnSpan="2"
            Background="#FDFEFE"
            CornerRadius="30"
            BorderBrush="#1F3A66"
            BorderThickness="3"
            Padding="60"
            Effect="{StaticResource ShadowEffect}"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            MaxWidth="2200"
            MinHeight="750">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>

                <!-- Columna izquierda: Imagen de perfil -->
                <StackPanel Grid.Column="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

                    <!-- Imagen -->
                    <Ellipse Width="350"
                     Height="350"
                     Stroke="#1F3A66"
                     StrokeThickness="3"
                     Effect="{StaticResource ShadowEffect}"
                     Fill="{StaticResource FotoPerfilBrushKey}" />

                    <!-- Nombre -->
                    <TextBlock x:Name="UserName"
                       Text=""
                       FontSize="36"
                       FontWeight="Bold"
                       Foreground="#1F3A66"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center"/>

                    <!-- Puesto -->
                    <TextBlock x:Name="Puesto"
                       Text="Esperando Acceso..."
                       FontSize="25"
                       Foreground="#7F8C8D"
                       FontWeight="Bold"
                       TextAlignment="Center"
                       HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Columna derecha: Información -->
                <StackPanel Grid.Column="1"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Margin="40 0">

                    <!-- Reloj -->
                    <TextBlock x:Name="lblHora"
                       Text="12:00:00"
                       FontSize="72"
                       FontFamily="Consolas"
                       FontWeight="Bold"
                       Foreground="#1F3A66"
                       TextAlignment="Left"/>

                    <!-- Fecha -->
                    <TextBlock x:Name="lblFecha"
                       Text="Lunes, 17 de Junio de 2025"
                       FontSize="24"
                       FontWeight="SemiBold"
                       Foreground="#34495E"
                       TextAlignment="Left"/>

                    <!-- Última verificación -->
                    <Border Background="#ECF0F1"
                    CornerRadius="10"
                    Padding="12 8"
                    HorizontalAlignment="Left">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Última verificación: "
                               FontSize="23"
                               FontWeight="Bold"
                               Foreground="#34495E"/>
                            <TextBlock x:Name="lblUltima"
                               Text="02:29 p.m."
                               FontSize="23"
                               Foreground="#27AE60"/>
                        </StackPanel>
                    </Border>

                    <!-- Resultado grande -->
                    <TextBlock x:Name="lblResultado"
           Text="Esperando..."
           FontSize="48"
           FontWeight="Bold"
           Foreground="#E67E22"
           Margin="10 20 0 0"
           TextAlignment="Left"
           TextWrapping="Wrap"
           TextTrimming="CharacterEllipsis"
           Width="950"/>

                </StackPanel>
            </Grid>
        </Border>



        <!-- Guardia en esquina inferior derecha -->
        <StackPanel Grid.Row="1" Grid.Column="1"
            Orientation="Horizontal"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Margin="0,40,40,20">

            <!-- Foto del guardia más grande -->
            <Ellipse Width="100"
             Height="100"
             Stroke="#1F3A66"
             StrokeThickness="2"
             Fill="{StaticResource FotoGuardiaBrushKey}"
             Effect="{StaticResource ShadowEffect}" />

            <!-- Datos del guardia más legibles -->
            <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                <TextBlock x:Name="lblGuardia"
                   Text="Guardia: Carlos Vela"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="#1F3A66"/>
                <TextBlock Text="Turno activo"
                   FontSize="16"
                   Foreground="#7F8C8D"
                   FontStyle="Italic"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</UserControl>
