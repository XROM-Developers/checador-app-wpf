<UserControl x:Class="Checador_App_Wpf.Components.Fingerprints.FingerprintRegisterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Checador_App_Wpf.Components.Fingerprints"
             Background="Transparent"
             Width="600" Height="1000">

    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Grid.Row="0"
                   Text="Registro de Huella"
                   FontSize="26"
                   FontWeight="Bold"
                   Foreground="#1F3A66"
                   TextAlignment="Center"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Imagen -->
        <Border Grid.Row="1"
                Width="400" Height="400"
                Background="#F0F3F4"
                CornerRadius="16"
                BorderBrush="#3498DB"
                BorderThickness="2"
                HorizontalAlignment="Center"
                Margin="0,0,0,20">
            <Image x:Name="imgHuellaPreview" Stretch="Uniform"/>
        </Border>

        <!-- Estado -->
        <TextBlock Grid.Row="2"
                   x:Name="txtStatus"
                   FontSize="14"
                   Foreground="Gray"
                   TextAlignment="Center"
                   TextWrapping="Wrap"
                   Text="Presione iniciar para capturar las huellas."
                   HorizontalAlignment="Center"
                   Margin="10,0,10,20"/>



        <!-- Animación de dedos -->
        <local:FingerAnimationControl Grid.Row="4"
                                      x:Name="fingerAnimationControl"
                                      Width="500"
                                      Height="400"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Bottom"
                                      Margin="0"/>
    </Grid>
</UserControl>
