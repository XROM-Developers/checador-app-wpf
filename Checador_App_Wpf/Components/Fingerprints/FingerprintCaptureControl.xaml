<UserControl x:Class="Checador_App_Wpf.Components.Fingerprints.FingerprintCaptureControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" Height="150" Width="150">
    <Grid>
        <!-- Imagen de la huella en captura -->
        <Image Name="imgCapturePreview" VerticalAlignment="Center" HorizontalAlignment="Center" Height="100" Width="100"/>
        <!-- Estado de la huella -->
        <TextBlock Name="txtCaptureStatus" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,10"/>
    </Grid>
</UserControl>
